# Copy this file to .env.local and fill in your values

# Resend Email Service (Recommended)
# Get your API key from https://resend.com
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx

# Business Email Configuration
BUSINESS_EMAIL=info@gosimpliut.com
FROM_EMAIL=noreply@gosimpliut.com

# Google Analytics 4
# Get your measurement ID from Google Analytics Admin > Data Streams
# Format: G-XXXXXXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Microsoft Clarity
# Get your project ID from clarity.microsoft.com
# Found in Settings > Setup > Install tracking code
NEXT_PUBLIC_CLARITY_PROJECT_ID=your_clarity_project_id_here

# SendGrid (Alternative to Resend)
# SENDGRID_API_KEY=your_sendgrid_api_key_here
# SENDGRID_FROM_EMAIL=noreply@simpliexteriors.com

# Lead Notification Settings
LEAD_NOTIFICATION_EMAIL=info@gosimpliut.com

# Analytics Configuration (Optional)
# MICROSOFT_CLARITY_ID=your_clarity_id_here

# Database Configuration (Optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/simpliexteriors

# SMS Notifications (Optional - Twilio)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+14355550100

# Webhook URLs (Optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# GoHighLevel (GHL) Integration
# Get your webhook URL from your GHL account
GHL_WEBHOOK_URL=https://services.leadconnectorhq.com/hooks/YOUR_WEBHOOK_ID
# Optional: Add API key if your GHL webhook requires authentication
GHL_API_KEY=your_ghl_api_key_here

# Admin Panel
ADMIN_TOKEN=simpli-admin-2025

# Environment
NODE_ENV=production